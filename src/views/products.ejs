Â«<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			<% for (i=0; i<product.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= product.id %>">
						<figure class="product-box_image">
							<%if(product[i].image != ""){%>
							<img src="/images/products/<%= product[i].image %>" alt="imagen de producto">
							<%}else{%>
							<img src="/images/products/default-image.png" alt="imagen de producto">
							<%}%>
						</figure>
						<article class="product-box_data">
							<h2>$<%=product[i].price%></h2>
							<span><%=product[i].discount%>% dto</span>
							<p><%= product[i].name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<%}%>
		
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>